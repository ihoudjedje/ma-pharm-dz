<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardlist_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="#fff"
        android:gravity="top"
        android:theme="@style/Animation.AppCompat.DropDownUp"
        android:layout_margin="10dp">


        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="F"
            android:id="@+id/consultationLettre"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/circular_textview"
            android:fontFamily="sans-serif-thin"
            android:textAlignment="center"
            android:layout_weight="0.63"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/Adress"
            android:textColor="#FFF"
            android:textSize="32sp"
            android:backgroundTint="@color/accent_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Medecine name"
            android:id="@+id/NomMedConsultation"
            android:layout_weight="0.07"
            android:textSize="15dp"
            android:typeface="serif"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/consultationLettre"
            android:layout_toEndOf="@+id/consultationLettre"
            android:layout_marginLeft="12dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="date"
            android:id="@+id/dateDemande"
            android:layout_below="@+id/NomMedConsultation"
            android:layout_alignLeft="@+id/NomMedConsultation"
            android:layout_alignStart="@+id/NomMedConsultation" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/envoyeeNotification"
            android:src="@drawable/ic_menu_send"
            android:tint="@color/common_plus_signin_btn_text_light_disabled"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
