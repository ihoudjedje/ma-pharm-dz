<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardlist_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@null"
        android:gravity="top"
        android:padding="7dp"
        android:theme="@style/Animation.AppCompat.DropDownUp"
        android:layout_margin="10dp"
        >


        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="F"
            android:id="@+id/letter_notification"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/circular_textview"
            android:textAlignment="center"
            android:layout_weight="0.63"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/medicament_notification"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:textSize="32sp"
            android:layout_marginRight="7dp"
            android:backgroundTint="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pharmacy name"
            android:id="@+id/NomPharmacie_notification"
            android:layout_weight="0.07"
            android:textSize="15dp"
            android:typeface="serif"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/letter_notification"
            android:layout_toEndOf="@+id/letter_notification" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nom De med"
            android:id="@+id/medicament_notification"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/Date_notification"
            android:layout_toRightOf="@+id/letter_notification"
            android:layout_toEndOf="@+id/letter_notification"
            android:layout_marginTop="7dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date"
            android:id="@+id/Date_notification"
            android:layout_alignBottom="@+id/NomPharmacie"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
